{

    "mqtt_system":[
        {
            "Name":"MQTT System can produce metrics about data amount",
            "Effect":"Allow",
            "Action":[
                "publish"                
            ],
            "Resource":[
                "/hub/data_amount/mqtt/*"               
            ]            
        }

    ],
    "context_sensing":[
        {
            "Name":"Context Sensing can read everything",
            "Effect":"Allow",
            "Action":[
                "subscribe"                
            ],
            "Resource":[
                "/*/*/*/*/*/*/*"               
            ]            
        },{
            "Name":"Context Sensing can read everything",
            "Effect":"Allow",
            "Action":[
                "subscribe"                
            ],
            "Resource":[
                "/*/*/*/*"               
            ]            
        },
        {
            "Name":"Context Sensing can publish everything",
            "Effect":"Allow",
            "Action":[
                "publish"                
            ],
            "Resource":[               
                "/*/*/*/*"
            ]
            
        }

    ],
    "tenant-1":[
        {
            "Name":"Allow Tenant-1 of City Surveillance to publish to the stream",
            "Effect":"Allow",
            "Action":[
                "publish"                
            ],
            "Resource":[
                "/smartcity/camera/stream/usa/ohio/stubpark/city_surveillance"
            ]
            
        }

    ],


    "tenant-2":[
        {
            "id":"1",
            "Name":"Allow City AI to subscribe the Video",
            "Effect":"Allow",
            "Action":[
                "subscribe"
            ],
            "Resource":[
                "/smartcity/camera/stream/usa/ohio/stubpark/city_surveillance"                
            ]
        },
        {
            "Name":"Allow City AI to publish the people count",
            "Action":[
                "publish"                
            ],
            "Effect":"Allow",
            "Resource":[
                "/smartcity/camera/people_count/usa/ohio/stubpark/city_ai"
            ]
        }
    ],
    "tenant-3":[
        {
            "Name":"Allow tenant-3 to subscribe the People Count",
            "Action":[
                "subscribe"
                
            ],
            "Effect":"Allow",
            "Resource":[
                "/smartcity/camera/people_count/usa/ohio/stubpark/city_ai"
            ]            
        },
        {
            "Name":"Allow tenant-3 to subscribe the Video if people count >= 10 for 5 minutes",
            "Action":[
                "stream"                
            ],
            "Effect":"Allow",
            "Resource":[
                "/smartcity/camera/stream/usa/ohio/store_x/city_surveillance"
            ],
            "Condition": {              

                "AnyOf":[
                    {"object":"people_count","location":"store_x","max_5mins":{"$gt": 10}}
                    
                ],
                "All":[
                    {"object":"data_amount","protocol":"mqtt","lasthour_mb":{"$lt": 3000}},
                    {"object":"data_amount","protocol":"mqtt","last24hour_mb":{"$lt": 30000}}
                ]        
                
            }
            
        }
    ],
    "tenant-4":[
        {
            "Name":"Allow tenant-3 to subscribe the People Count",
            "Action":[
                "subscribe"
                
            ],
            "Effect":"Allow",
            "Resource":[
                "/smartcity/camera/people_count/usa/ohio/stubpark/city_ai"
            ]            
        },
        {
            "Name":"Allow tenant-3 to subscribe the Video if people count >= 30 for 5 minutes",
            "Action":[
                "stream"                
            ],
            "Effect":"Allow",
            "Resource":[
                "/smartcity/camera/stream/usa/ohio/stubpark/city_surveillance"
            ],
            "Condition": {              

                "AnyOf":[
                    {"object":"people_count","location":"stubpark","max_5mins":{"$gt": 30}}
                    
                ],
                "All":[
                    {"object":"data_amount","protocol":"mqtt","lasthour_mb":{"$lt": 3000}},
                    {"object":"data_amount","protocol":"mqtt","last24hour_mb":{"$lt": 30000}}
                ]        
                
            }
            
        }
    ]
}